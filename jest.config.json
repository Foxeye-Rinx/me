{
  "clearMocks": true,
  "coverageDirectory": "coverage",
  "coverageProvider": "v8",
  "moduleFileExtensions": ["js", "ts"],
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "testEnvironment": "node",
  "transform": {
    "^.+\\.(t|j)sx?$": "@swc/jest"
  },
  "testPathIgnorePatterns": ["<rootDir>/firebase"],
  "testMatch": ["**/*_test.ts?(x)"]
}
